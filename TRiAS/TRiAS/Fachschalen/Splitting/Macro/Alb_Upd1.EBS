		rstPG.MoveLast
		rstPG.MoveFirst

		Dim Feld As String

		If fldMDBFeFalsch Is Not Nothing Then
			Feld$ = Trim$ ( fldMDBFeFalsch)
			If Feld$ = "True" Then
				Feld = "1"
				Set VFeat = Nothing
				Set VFeat = Obj.GetFeature(strFKZ)
				If VFeat Is Nothing Then
					Set VFeat = Obj.AddFeature(strFKZ,FEATURETYPE_WriteAble)
