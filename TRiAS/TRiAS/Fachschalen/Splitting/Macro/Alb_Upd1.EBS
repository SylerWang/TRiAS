				If VFeat Is Not Nothing Then
					VFeat.Feature$ = Feld
				End If			
			End If
		End If
'================================
		If fldMDBFeALB Is Not Nothing Then
			Feld$ = Trim$ ( fldMDBFeALB)
			If Feld$ = "True" Then
				Feld = "1"
				Set VFeat = Nothing
				Set VFeat = Obj.GetFeature(strFAA)
				If VFeat Is Nothing Then
					Set VFeat = Obj.AddFeature(strFAA,FEATURETYPE_WriteAble)
